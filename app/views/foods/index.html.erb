<%= render 'layouts/navbar' %> 

<div class="max-width flex-center">
  <div class="row food-heading">
    <%= render partial: "shared/heading_text" %>
    <%= button_to "Add Food", new_food_path, method: :get, class:"btn-bg-red-big" %>
  </div>
</div>

<p class="notice"><%= notice %></p>

<div class="max-width flex-center food-table-wrapper">
  <table class="table">
    <tr>
      <th>Food</th>
      <th>Quantity</th>
      <th>Measurement unit</th>
      <th>Unit price</th>
      <th>Actions</th>
    </tr>
    <% @foods.each do |food| %>
      <%= render food %>
    <% end %>
    <%= render partial: "shared/empty_list", locals: {list: @foods} %>

  </table>
</div>

